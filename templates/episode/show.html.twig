{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>
    <div class="card" >
        {% if comments is defined %}
        {% for comment in comments %}

        <div class="card-body">

            <h6 class="card-subtitle mb-1 mt-3 ml-3 text-muted">not√© : {{ comment.rate }}</h6>
            <p class="card-text ml-3 mb-3 mr-2"><span >Commentaire : </span>{{ comment.comment }}</p>
        </div>
            {% else %}
        <div class="card-body">
            <h5>Pour le moment, aucun commentaire.</h5>
            {% endfor %}
        {% endif %}
        </div>
    </div>
    {% if is_granted('ROLE_SUBSCRIBER') or is_granted('ROLE_ADMIN')  %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
    {% endif %}

    <a href="{{ path('episode_index') }}">back to list</a>

    <a href="{{ path('episode_edit', {'id': episode.slug}) }}">edit</a>

    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
