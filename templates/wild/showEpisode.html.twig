{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>
            <p>{{ season.description}} : {{ season.year }}</p>
            {%  for episode in episode %}
               <ul>
                   <a href="{{ path('episode', {'id': episode.id }) }}"><li>{{ episode.title }}</li></a>
               </ul>
            {%  endfor %}
        </div>
    </div>
    <form>
        <input type="button" value="Page Précédente" onclick="history.back()">
    </form>

    <a href="{{ path('wild_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}
